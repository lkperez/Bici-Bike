<%= form_with(url: login_path, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.submit 'Log in', class: 'login-button' %>
  </div>
<% end %>




